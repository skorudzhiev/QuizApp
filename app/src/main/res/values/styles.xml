<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>

    <!-- TextViews Style. -->
    <style name="InitialString">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- TextViews Questions Style. -->
    <style name="PrimaryTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- TextViews Answer Fields Style. -->
    <style name="SecondaryTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- TextViews Hint Fields Style. -->
    <style name="HintTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
